
<div class="container">
  <div>
    <%= link_to "Title",root_path(query: params[:query], query_town: params[:query_town]), class: "filtre-button btn-sucess" %>
    <%= link_to "Playlist", lists_path(query: params[:query], query_town: params[:query_town]), class: "filtre-button btn-sucess"  %>


  </div>

  <div class="row" >
    <% @songs.each do |song| %>
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <% if song.photo.present? %>
            <%= cl_image_tag(song.photo, width: 400, height: 300, crop: :fill) %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= song.title  %></h5>
              <audio id="player" controls>
                <source src="<%= song.video %>" type="audio/mp3">
              </audio>
              <p class="card-logo">
                <a class="btn btn-light"><i class="fas fa-circle"></i></a>
                <a class="btn btn-light"><i class="fas fa-music"></i></a>
                <% unless current_user.nil? %>
                  <div class="dropup">
                    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-plus btn btn-light"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <% @user_lists.each do |list| %>
                        <%= link_to list.name, song_list_songs_path(list_id: list.id, song_id: song.id), class: "dropdown-item", method: :post %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
