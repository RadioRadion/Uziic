<div class="formb">
    <%= simple_form_for(@song, url: artist_songs_path, method: :post) do |f| %>
    <%= f.input :title %>
    <%= f.input :tags %>
    <%= f.input :description %>
    <%= f.input :video, label: 'Sound'%>
    <%= f.input :video_cache, as: :hidden %>
    <%= f.input :post_at, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :duration %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

    <%= f.submit "Save music", class: "btn btn-success" %>
    <% end %>
  </div>



