<p class="h1 text-center">My Playlists</p>

<div class="container">

  <figure>
    <div>
    <button type="button" class="btn-createlist" data-toggle="modal" data-target="#exampleModal">
     <span>Create playlist</span>
      <span style="color: black" >Create playlist</span>
      </button>
    </div>
  </figure>

  <% @lists.each do |list| %>
  <div class="card-product">
    <div class="card-product-infos">
      <h5 class="card-title"><%= "#{list.name} ( #{list.tags} )" %></h5>
      <p class="card-logo">
        <a class="btn btn-light"><i class="fas fa-play"></i></a>
        <%= link_to "", edit_user_list_path(list), class: "fas fa-edit btn btn-light" %>

        <%= link_to "", user_list_path(list), method: :delete, class: "fas fa-trash btn btn-light" %>
      </p>
    </div>
  </div>
  <% end %>
</div>

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create your playlist</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

              <%= render 'form'%>

           </div>
    </div>
  </div>
</div>
